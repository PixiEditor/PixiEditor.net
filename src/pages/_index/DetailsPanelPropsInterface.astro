---
import Lucide from "@components/Lucide.astro";

export interface DetailsPanelProps {
  id: string;
  iconData: string;
  title: string;
  colorClass: string; // For text and decoration colors (e.g., "text-pc-pixel-blue")
  openInitially?: boolean;
  content: string;
}

const { id, iconData, title, colorClass, openInitially = false, content } = Astro.props;
---

<details name="features" id={id} class="tab-panel" {...(openInitially ? { open: true } : {})}>
  <summary class="md:hidden list-none flex justify-between items-center px-6 py-3">
    <div>
      <Lucide data={iconData} class={`${colorClass} text-2xl inline align-middle`} />
      <h2 class={`font-bold decoration-4 inline align-middle ${colorClass}`}>
        {title}
      </h2>
    </div>
    <Lucide data="chevron-down" />
  </summary>

  <div class="bg-neutral-900 w-full md:h-96 lg:rounded p-3 flex flex-col items-center">
    {Astro.slots.default?.() || (
      <p>
        <span class={colorClass}>{title}</span> Tab
      </p>
    )}
  </div>
</details>