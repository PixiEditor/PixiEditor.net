---
import { Image } from "astro:assets";
import { steamStorePage } from "@assets/links";
import Lucide from "../Lucide.astro";
import SteamLogo from "@assets/logos/SteamLogo.svg"

const { class: className } = Astro.props;
---

<div class=`bg-neutral-700 p-6 rounded max-w-screen-md mx-auto ${className}`>
    <h1 class="text-2xl text-center">Check out our <span class="font-bold">Supporter Pack</span> on Steam!</h1>

    <div class="grid grid-cols-3 justify-around text-center items-center w-full mt-6">
        <div>
            <p class="text-4xl font-bold">21</p>
            <p class="pb-3">custom <br> color palettes</p>
        </div>
        <div class="py-3">
            <p class="px-3 py-1 border-2 w-fit mx-auto rounded">Awesome Supporter!</p>
            <p class="mt-3">an exclusive <br/> badge inside PixiEditor</p>
        </div>
        <div class="py-3">
            <Lucide data="hand-heart" />
            <p>contribute to the <br/>
                development of PixiEditor!</p>
        </div>
    </div>

    <a class="flex py-1 gap-2 justify-center bg-pc-softpixired rounded" href={steamStorePage} target="_blank">Take me to Steam <Image src={SteamLogo} alt="" /></a>
</div>